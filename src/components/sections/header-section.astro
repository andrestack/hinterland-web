---
interface Props {
  label?: string;
  title: string;
  subtitle?: string;
  className?: string;
}

const { label, title, subtitle, className } = Astro.props;
---

<div class="flex flex-col items-start text-left">
  {
    label ? (
      <div class="text-gradient_indigo-purple mb-4 font-semibold">{label}</div>
    ) : null
  }
  <h1
    class="mb-5 text-4xl font-bold md:mb-6 md:text-5xl lg:text-6xl text-transparent bg-clip-text bg-gradient-to-br from-indigo-600 from-20% via-primary via-30% to-green-600"
  >
    {title}
  </h1>
  {
    subtitle ? (
      <p class="mt-4 text-balance items-start text-lg text-secondary dark:text-tertiary">
        {subtitle}
      </p>
    ) : null
  }
</div>
